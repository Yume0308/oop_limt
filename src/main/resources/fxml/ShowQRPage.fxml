<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300" prefWidth="300" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.limt.Controllers.ShowQRPageController">
   <children>
       <Button fx:id="minimize" layoutX="206.0" mnemonicParsing="false" onAction="#HandleMinimize" prefHeight="30.0" prefWidth="45.0" style="-fx-background-color: transparent;">
           <graphic>
               <ImageView fitHeight="20.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
                   <image>
                       <Image url="@../images/minimize_window.png" />
                   </image>
               </ImageView>
           </graphic>
       </Button>
       <Button fx:id="close" layoutX="252.0" mnemonicParsing="false" onAction="#HandleClose" prefHeight="30.0" prefWidth="45.0" style="-fx-background-color: transparent;">
           <graphic>
               <ImageView fitHeight="20.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
                   <image>
                       <Image url="@../images/close_window.png" />
                   </image>
               </ImageView>
           </graphic>
       </Button>
      <ImageView fx:id="qrCode" fitHeight="250.0" fitWidth="250.0" layoutX="25.0" layoutY="36.0" pickOnBounds="true" preserveRatio="true" />
   </children>
</AnchorPane>
